---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "State-driven agent runtime for Go. Build trustworthy, adaptable AI-powered systems with structural constraints." } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="grid-overlay"></div>

    <nav class="nav">
        <div class="nav-inner">
            <a href={base} class="logo">
                <span class="logo-bracket">[</span>
                <span class="logo-text">agent-go</span>
                <span class="logo-bracket">]</span>
                <span class="logo-version">v0.2.0</span>
            </a>
            <div class="nav-links">
                <a href={`${base}#features`}>Features</a>
                <a href={`${base}#states`}>States</a>
                <a href={`${base}#quickstart`}>Quickstart</a>
                <a href={`${base}docs`}>Docs</a>
                <a href="https://github.com/felixgeelhaar/agent-go" class="nav-github" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
            </div>
        </div>
    </nav>

    <slot />

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <span class="logo-bracket">[</span>
                    <span class="logo-text">agent-go</span>
                    <span class="logo-bracket">]</span>
                </div>
                <div class="footer-links">
                    <a href={`${base}docs`}>Documentation</a>
                    <a href="https://github.com/felixgeelhaar/agent-go" target="_blank">GitHub</a>
                    <a href="https://pkg.go.dev/github.com/felixgeelhaar/agent-go" target="_blank">pkg.go.dev</a>
                </div>
                <div class="footer-meta">
                    <span>MIT License</span>
                    <span class="footer-separator">|</span>
                    <span>Built with structural constraints</span>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>

<style is:global>
@import '../styles/global.css';

/* Navigation */
.nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 60px;
    background: rgba(10, 14, 20, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-primary);
    z-index: 100;
}

.nav-inner {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--space-xl);
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo {
    display: flex;
    align-items: center;
    gap: 2px;
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
}

.logo-bracket {
    color: var(--accent-cyan);
}

.logo-text {
    color: var(--text-primary);
}

.logo-version {
    font-size: 0.65rem;
    color: var(--text-muted);
    margin-left: var(--space-sm);
    padding: 2px 6px;
    background: var(--bg-tertiary);
    border-radius: 4px;
}

.nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
}

.nav-links a {
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
}

.nav-links a:hover {
    color: var(--text-primary);
}

.nav-github {
    display: flex;
    align-items: center;
    color: var(--text-secondary);
}

.nav-github:hover {
    color: var(--accent-cyan);
}

/* Footer */
.footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-primary);
    padding: var(--space-2xl) 0;
    margin-top: var(--space-4xl);
}

.footer-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-lg);
}

.footer-brand {
    font-family: var(--font-mono);
    font-size: 0.9rem;
}

.footer-links {
    display: flex;
    gap: var(--space-lg);
}

.footer-links a {
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.footer-links a:hover {
    color: var(--accent-cyan);
}

.footer-meta {
    font-size: 0.75rem;
    color: var(--text-muted);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
}

.footer-separator {
    opacity: 0.5;
}

/* Mobile Nav */
@media (max-width: 768px) {
    .nav-links {
        gap: var(--space-md);
    }

    .nav-links a:not(.nav-github) {
        display: none;
    }

    .footer-content {
        flex-direction: column;
        text-align: center;
    }
}
</style>
